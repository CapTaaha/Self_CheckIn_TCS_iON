<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C9292"
    tools:context=".WelcomeAndBooking">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="408dp"
        android:layout_height="55dp"
        android:layout_marginTop="200dp"
        android:background="#FFC107"
        android:gravity="center"
        android:text="WELCOME TO HOTEL GOLDEN CROWN"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39999998" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="412dp"
        android:layout_height="297dp"
        android:layout_marginBottom="300dp"
        android:background="#FFFFFF"
        android:backgroundTint="#000000"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/open"
                tools:ignore="ImageContrastCheck"
                tools:layout_conversion_absoluteHeight="410dp"
                tools:layout_conversion_absoluteWidth="400dp"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/outside"
                tools:ignore="ImageContrastCheck"
                tools:layout_conversion_absoluteHeight="1280dp"
                tools:layout_conversion_absoluteWidth="400dp"
                tools:layout_editor_absoluteX="408dp"
                tools:layout_editor_absoluteY="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/reception"
                tools:ignore="ImageContrastCheck"
                tools:layout_conversion_absoluteHeight="250dp"
                tools:layout_conversion_absoluteWidth="400dp"
                tools:layout_editor_absoluteX="811dp"
                tools:layout_editor_absoluteY="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/dinnig"
                tools:ignore="ImageContrastCheck"
                tools:layout_conversion_absoluteHeight="350dp"
                tools:layout_conversion_absoluteWidth="400dp"
                tools:layout_editor_absoluteX="1213dp"
                tools:layout_editor_absoluteY="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/swimming"
                tools:ignore="ImageContrastCheck"
                tools:layout_conversion_absoluteHeight="675dp"
                tools:layout_conversion_absoluteWidth="400dp"
                tools:layout_editor_absoluteX="1615dp"
                tools:layout_editor_absoluteY="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/room_1"
                tools:ignore="ImageContrastCheck"
                tools:layout_conversion_absoluteHeight="1195dp"
                tools:layout_conversion_absoluteWidth="400dp"
                tools:layout_editor_absoluteX="2018dp"
                tools:layout_editor_absoluteY="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:src="@drawable/room_2"
                tools:ignore="ImageContrastCheck"
                tools:layout_conversion_absoluteHeight="1280dp"
                tools:layout_conversion_absoluteWidth="400dp"
                tools:layout_editor_absoluteX="2420dp"
                tools:layout_editor_absoluteY="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/about"
        android:layout_width="273dp"
        android:layout_height="71dp"
        android:layout_marginBottom="150dp"
        android:background="#FFC107"
        android:hapticFeedbackEnabled="false"
        android:text="About Us"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.19999999"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/bookNow"
        android:layout_width="273dp"
        android:layout_height="71dp"
        android:layout_marginBottom="100dp"
        android:text="BOOK NOW"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about"
        app:layout_constraintVertical_bias="0.19999999" />

    <Button
        android:id="@+id/booking"
        android:layout_width="273dp"
        android:layout_height="71dp"
        android:text="@string/show_booking"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookNow"
        app:layout_constraintVertical_bias="0.19999999" />

</androidx.constraintlayout.widget.ConstraintLayout>